package com.institution.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.institution.model.Institution;
import com.institution.repository.InstitutionRepository;
import com.institution.service.SequenceGeneratorService;

@RestController
public class InstitutionController {
	
	@Autowired
	SequenceGeneratorService sequenceGenerator;
	
	@Autowired
	InstitutionRepository repo;
	@GetMapping("/")
	public String demo() {
		Institution in = new Institution();
		//in.setId(sequenceGenerator.generateSequence(Institution.SEQUENCE_NAME));
		in.setId(2);
		in.setBranch("DEMO");
		in.setMode("ICSE");
		repo.save(in);
		return "CREATED";
	}

}
